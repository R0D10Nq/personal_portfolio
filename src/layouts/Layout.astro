---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title, 
  description = "Backend Samurai - Python Backend Developer с 3+ годами опыта. Django, FastAPI, PostgreSQL, Redis, Celery. Высоконагруженные системы, микросервисы, AI интеграции.",
  image = "/personal_portfolio/og-image.png",
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Шевцов Родион" />
    <meta name="keywords" content="Python, Backend, Developer, Django, FastAPI, PostgreSQL, Redis, Celery, микросервисы, API, разработчик" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:site_name" content="Backend Samurai" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/personal_portfolio/favicon.svg" />
    <link rel="apple-touch-icon" href="/personal_portfolio/favicon.svg" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="msapplication-TileColor" content="#0a0a0a" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Шевцов Родион",
        "alternateName": "Backend Samurai",
        "jobTitle": "Python Backend Developer",
        "url": "https://r0d10nq.github.io/personal_portfolio",
        "email": "q@r0d10n.ru",
        "sameAs": [
          "https://github.com/R0D10Nq",
          "https://t.me/qr0d10n"
        ],
        "knowsAbout": ["Python", "Django", "FastAPI", "PostgreSQL", "Redis", "Celery", "Docker", "микросервисы"]
      }
    </script>
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
