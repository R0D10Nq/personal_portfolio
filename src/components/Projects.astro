    metrics: [
      { label: 'Requests/min', value: '10K+' },
      { label: 'Uptime', value: '99.9%' },
      { label: 'P95 Response', value: '<100ms' },
      { label: 'Данных/день', value: '100GB+' }
    ],
    highlights: [
