---
// hero section
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- bg effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-cyber-black via-cyber-dark to-cyber-black"></div>
  
  <!-- grid overlay -->
  <div class="absolute inset-0 opacity-20" 
       style="background-image: linear-gradient(rgba(255,0,110,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,0,110,0.1) 1px, transparent 1px); background-size: 60px 60px;">
  </div>

  <!-- matrix rain container -->
  <div id="matrix-rain" class="absolute inset-0 overflow-hidden pointer-events-none"></div>
  
  <!-- scan line -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute w-full h-1 bg-gradient-to-r from-transparent via-neon-pink/30 to-transparent animate-scan-line"></div>
  </div>

  <!-- content -->
  <div class="relative z-10 container mx-auto px-4 text-center">
    <!-- kanji decoration -->
    <div class="absolute -top-10 left-1/2 -translate-x-1/2 text-8xl md:text-9xl font-mono text-neon-pink/5 select-none">
      侍
    </div>

    <!-- main title -->
    <div class="mb-6">
      <h1 class="glitch text-4xl md:text-6xl lg:text-7xl font-mono font-bold text-white mb-2" data-text="< Backend Samurai />">
        &lt; Backend Samurai /&gt;
      </h1>
      <p class="text-neon-pink/60 font-mono text-lg md:text-xl">
        侍 開発者
      </p>
    </div>

    <!-- subtitle -->
    <div class="mb-8">
      <h2 class="text-xl md:text-2xl text-gray-300 font-light mb-4">
        Python Backend Developer
      </h2>
      <div class="flex flex-wrap justify-center gap-2 md:gap-4 text-sm md:text-base font-mono text-neon-blue">
        <span>Django</span>
        <span class="text-neon-pink">•</span>
        <span>FastAPI</span>
        <span class="text-neon-pink">•</span>
        <span>PostgreSQL</span>
        <span class="text-neon-pink">•</span>
        <span>Redis</span>
        <span class="text-neon-pink">•</span>
        <span>Celery</span>
      </div>
    </div>

    <!-- stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto mb-10">
      <div class="card-cyber p-4 rounded-lg">
        <div class="text-2xl md:text-3xl font-bold text-neon-pink font-mono">3+</div>
        <div class="text-xs md:text-sm text-gray-400">лет опыта</div>
      </div>
      <div class="card-cyber p-4 rounded-lg">
        <div class="text-2xl md:text-3xl font-bold text-neon-blue font-mono">400+</div>
        <div class="text-xs md:text-sm text-gray-400">лендингов</div>
      </div>
      <div class="card-cyber p-4 rounded-lg">
        <div class="text-2xl md:text-3xl font-bold text-neon-purple font-mono">2M+</div>
        <div class="text-xs md:text-sm text-gray-400">пользователей</div>
      </div>
      <div class="card-cyber p-4 rounded-lg">
        <div class="text-2xl md:text-3xl font-bold text-katana-gold font-mono">99.9%</div>
        <div class="text-xs md:text-sm text-gray-400">uptime</div>
      </div>
    </div>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#projects" class="btn-samurai">
        Смотреть проекты
      </a>
      <a href="https://github.com/R0D10Nq" 
         target="_blank" 
         rel="noopener noreferrer"
         class="px-6 py-3 border border-neon-blue/50 text-neon-blue font-mono text-sm uppercase tracking-wider hover:bg-neon-blue/10 transition-all">
        GitHub
      </a>
      <a href="#contact" 
         class="px-6 py-3 border border-neon-pink/50 text-neon-pink font-mono text-sm uppercase tracking-wider hover:bg-neon-pink/10 transition-all">
        Связаться
      </a>
    </div>

    <!-- scroll indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-neon-pink/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>

<script>
  // matrix rain effect
  function createMatrixRain() {
    const container = document.getElementById('matrix-rain');
    if (!container) return;
    
    const chars = '侍刀力心道武士龍虎風雷火水01';
    const columns = Math.floor(window.innerWidth / 30);
    
    for (let i = 0; i < columns; i++) {
      const column = document.createElement('div');
      column.className = 'matrix-column';
      column.style.left = `${i * 30}px`;
      column.style.animationDelay = `${Math.random() * 5}s`;
      column.style.animationDuration = `${5 + Math.random() * 5}s`;
      
      let text = '';
      for (let j = 0; j < 20; j++) {
        text += chars[Math.floor(Math.random() * chars.length)] + '\n';
      }
      column.textContent = text;
      container.appendChild(column);
    }
  }
  
  createMatrixRain();
</script>
