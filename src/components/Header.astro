---
const navItems = [
  { href: '#hero', label: 'Главная', kanji: '家' },
  { href: '#about', label: 'Обо мне', kanji: '侍' },
  { href: '#projects', label: 'Проекты', kanji: '刀' },
  { href: '#skills', label: 'Навыки', kanji: '力' },
  { href: '#contact', label: 'Контакты', kanji: '繋' }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cyber-black/90 backdrop-blur-md border-b border-neon-pink/20">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- logo -->
      <a href="#hero" class="flex items-center gap-2 group">
        <span class="text-2xl text-neon-pink font-mono font-bold group-hover:animate-glitch">
          &lt;/&gt;
        </span>
        <span class="hidden sm:block text-sm font-mono text-gray-400">
          Backend<span class="text-neon-pink">Samurai</span>
        </span>
      </a>

      <!-- desktop nav -->
      <ul class="hidden md:flex items-center gap-6">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="group flex flex-col items-center gap-1 text-gray-400 hover:text-neon-pink transition-colors"
            >
              <span class="text-xs text-neon-pink/40 group-hover:text-neon-pink font-mono">
                {item.kanji}
              </span>
              <span class="text-sm font-medium">{item.label}</span>
            </a>
          </li>
        ))}
      </ul>

      <!-- mobile menu btn -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden text-neon-pink p-2"
        aria-label="Открыть меню"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- mobile nav -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-neon-pink/20 pt-4">
      <ul class="flex flex-col gap-4">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class="flex items-center gap-3 text-gray-400 hover:text-neon-pink transition-colors"
            >
              <span class="text-neon-pink/60 font-mono">{item.kanji}</span>
              <span>{item.label}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
  
  // close on link click
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menu.classList.add('hidden');
    });
  });
</script>
