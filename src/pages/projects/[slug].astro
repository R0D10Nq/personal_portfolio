---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout 
  title={`${project.data.title} | Backend Samurai`}
  description={project.data.description}
>
  <Header />
  
  <main class="pt-24 pb-16">
    <article class="container mx-auto px-4 max-w-4xl">
      <!-- Header -->
      <header class="mb-12">
        <a 
          href="/personal_portfolio/#projects" 
          class="inline-flex items-center gap-2 text-neon-pink hover:text-neon-blue transition-colors mb-6"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Назад к проектам
        </a>
        
        <div class="flex items-start justify-between gap-4 mb-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">
              {project.data.title}
            </h1>
            <p class="text-neon-blue font-mono">{project.data.subtitle}</p>
          </div>
          
          {project.data.tier === 1 && (
            <span class="px-3 py-1 bg-neon-pink/20 text-neon-pink text-sm font-mono rounded">
              Commercial
            </span>
          )}
          {project.data.tier === 2 && (
            <span class="px-3 py-1 bg-neon-purple/20 text-neon-purple text-sm font-mono rounded">
              Featured
            </span>
          )}
        </div>
        
        <p class="text-gray-400 text-lg mb-6">{project.data.description}</p>
        
        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
          {project.data.tags.map((tag: string) => (
            <span class="tech-badge">{tag}</span>
          ))}
        </div>
        
        <!-- Metrics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
          {project.data.metrics.map((m: {label: string, value: string}) => (
            <div class="card-cyber p-4 rounded-lg text-center">
              <div class="text-xl font-bold text-neon-pink font-mono">{m.value}</div>
              <div class="text-xs text-gray-500">{m.label}</div>
            </div>
          ))}
        </div>
        
        <!-- Links -->
        <div class="flex gap-4">
          {project.data.github && (
            <a 
              href={project.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-cyber-gray border border-neon-pink/30 rounded text-neon-pink hover:bg-neon-pink/10 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          )}
          {project.data.demo && (
            <a 
              href={project.data.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-neon-pink/20 border border-neon-pink rounded text-neon-pink hover:bg-neon-pink/30 transition-colors"
            >
              Demo
            </a>
          )}
        </div>
      </header>
      
      <!-- Content -->
      <div class="prose prose-invert prose-pink max-w-none">
        <Content />
      </div>
      
      <!-- Highlights -->
      <section class="mt-12 pt-8 border-t border-neon-pink/20">
        <h2 class="text-xl font-semibold text-white mb-4">Ключевые достижения</h2>
        <ul class="space-y-3">
          {project.data.highlights.map((h: string) => (
            <li class="flex items-start gap-3 text-gray-300">
              <span class="text-neon-pink mt-1">▸</span>
              <span>{h}</span>
            </li>
          ))}
        </ul>
      </section>
    </article>
  </main>
  
  <Footer />
</Layout>

<style is:global>
  .prose h2 {
    @apply text-neon-pink font-mono border-b border-neon-pink/20 pb-2;
  }
  
  .prose h3 {
    @apply text-neon-blue;
  }
  
  .prose code {
    @apply bg-cyber-gray px-1 py-0.5 rounded text-neon-blue;
  }
  
  .prose pre {
    @apply bg-cyber-dark border border-neon-pink/20 rounded-lg;
  }
  
  .prose pre code {
    @apply bg-transparent p-0;
  }
  
  .prose a {
    @apply text-neon-pink hover:text-neon-blue transition-colors;
  }
  
  .prose table {
    @apply border-collapse;
  }
  
  .prose th {
    @apply bg-cyber-gray text-neon-pink;
  }
  
  .prose td, .prose th {
    @apply border border-neon-pink/20 px-4 py-2;
  }
</style>
